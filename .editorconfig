# EditorConfig is awesome: http://EditorConfig.org
root                      = true
[*]
end_of_line               = crlf
insert_final_newline      = true
indent_style              = space

trim_trailing_whitespace  = true

[*.{js,ts}]
charset                   = utf-8
indent_size               = 2

[{package.json,.travis.yml}]
insert_final_newline      = false
